@model Backy.Models.Drive

@{
    string headerBackgroundColor;
    if (!Model.IsConnected)
    {
        headerBackgroundColor = "#d3d3d3"; // Light gray
    }
    else if (Model.IsConnected && !Model.IsMounted)
    {
        headerBackgroundColor = "#add8e6"; // Light blue
    }
    else // Connected and Mounted
    {
        headerBackgroundColor = "#90ee90"; // Light green
    }

    var isConnected = Model.IsConnected ? "Connected" : "Disconnected";
}

<div class="card drive-card mb-3" data-search-text="@Model.Name @Model.Label @Model.Vendor @Model.Model @Model.Serial">
    <!-- Card Header -->
    <div class="card-header d-flex justify-content-between align-items-center"
        style="background-color:@headerBackgroundColor; color:black;">
        <div class="d-flex align-items-center">
            <!-- Drive Icon -->
            <img src="/icons/hdd.svg" alt="Drive Icon" style="height: 24px; margin-right: 8px;" />
            <span>@(string.IsNullOrEmpty(Model.Label) ? "Unnamed Drive" : Model.Label)</span>
        </div>
    </div>

    <!-- Drive Details -->
    <div class="card-body">
        <!-- Drive Details Table -->
        <div class="table-responsive">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>State</th>
                        <td>@isConnected</td>
                    </tr>
                    <tr>
                        <th>Vendor</th>
                        <td>@Model.Vendor</td>
                    </tr>
                    <tr>
                        <th>Model</th>
                        <td>@Model.Model</td>
                    </tr>
                    <tr>
                        <th>Serial</th>
                        <td>@Model.Serial</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Process List Modal -->
<div class="modal fade" id="processListModal-@Model.PoolGroupId" tabindex="-1"
    aria-labelledby="processListModalLabel-@Model.PoolGroupId" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="processListModalLabel-@Model.PoolGroupId">Processes Using the Mount Point
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>The following processes are preventing the unmount operation:</p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>PID</th>
                            <th>Command</th>
                            <th>User</th>
                            <th>FD</th>
                            <th>Type</th>
                            <th>Node</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody id="processListTableBody-@Model.PoolGroupId">
                        <!-- Processes will be populated here dynamically -->
                    </tbody>
                </table>
                <p>Do you want to kill these processes and retry unmounting?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="killProcessesButton-@Model.PoolGroupId">Kill
                    Processes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
