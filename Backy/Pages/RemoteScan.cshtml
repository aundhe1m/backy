@page
@model Backy.Pages.RemoteScanModel
@{
    ViewData["Title"] = "Remote Scan";
}

<h1>@ViewData["Title"]</h1>

<!-- Add New Storage Source Button -->
<button class="btn btn-success mb-3" onclick="openAddModal()">Add New Storage Source</button>

<!-- Storage Source Cards -->
<div class="row">
    @foreach (var source in Model.StorageSources)
    {
        <div class="col-12">
            @await Html.PartialAsync("_StorageSourceCard", source)
        </div>
    }
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="storageModal" tabindex="-1" role="dialog" aria-labelledby="storageModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" id="storageForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="storageModalLabel">Add/Edit Storage Source</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var modelState in ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <input type="hidden" name="RemoteScan.Id" id="storageId" />

                    <div class="form-group">
                        <label>Name</label>
                        <input name="RemoteScan.Name" class="form-control" id="storageName" required />
                        <span asp-validation-for="RemoteScan.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Host</label>
                        <input name="RemoteScan.Host" class="form-control" id="storageHost" required />
                        <span asp-validation-for="RemoteScan.Host" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Port</label>
                        <input name="RemoteScan.Port" class="form-control" id="storagePort" required />
                        <span asp-validation-for="RemoteScan.Port" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input name="RemoteScan.Username" class="form-control" id="storageUsername" required />
                        <span asp-validation-for="RemoteScan.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Authentication Method</label>
                        <select name="RemoteScan.AuthenticationMethod" class="form-control" id="authMethod"
                            onchange="toggleAuthFields()" required>
                            <option value="Password">Password</option>
                            <option value="SSH Key">SSH Key</option>
                        </select>
                        <span asp-validation-for="RemoteScan.AuthenticationMethod" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="passwordField">
                        <label>Password</label>
                        <input name="RemoteScan.Password" class="form-control" id="storagePassword" type="password" />
                        <span asp-validation-for="RemoteScan.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="sshKeyField" style="display:none;">
                        <label>SSH Key</label>
                        <textarea name="RemoteScan.SSHKey" class="form-control" id="storageSSHKey"></textarea>
                        <span asp-validation-for="RemoteScan.SSHKey" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Remote Path</label>
                        <input name="RemoteScan.RemotePath" class="form-control" id="storageRemotePath" required />
                        <span asp-validation-for="RemoteScan.RemotePath" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        onclick="closeModal()">Close</button>
                    <button type="submit" class="btn btn-primary" id="modalSubmitButton">Save</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

<!-- File Explorer Modal -->
<div class="modal fade" id="fileExplorerModal" tabindex="-1" role="dialog" aria-labelledby="fileExplorerModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="max-width: 90%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">File Explorer</h5>
                <div class="input-group" style="width: 50%; position: relative;">
                    <input type="text" class="form-control" placeholder="Search..." id="searchInput">
                    <!-- Search button with icon -->
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button"
                            onclick="searchFiles($('#searchInput').val())">
                            <img src="/icons/search.svg" alt="Search" class="search-icon">
                        </button>
                    </div>
                    <!-- Suggestions dropdown -->
                    <div id="searchSuggestions" class="dropdown-menu" style="width: 100%;"></div>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                    onclick="closeFileExplorer()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-y: auto; max-height: 80vh;">
                <div id="fileExplorerContent">
                    <!-- File explorer content will be rendered here by JavaScript -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Index Schedule Modal -->
<div class="modal fade" id="scheduleModal" tabindex="-1" role="dialog" aria-labelledby="scheduleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="scheduleForm">
                <div class="modal-header">
                    <h5 class="modal-title">Schedule Index</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                        onclick="closeScheduleModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Schedules Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mon</th>
                                <th>Tue</th>
                                <th>Wed</th>
                                <th>Thu</th>
                                <th>Fri</th>
                                <th>Sat</th>
                                <th>Sun</th>
                                <th>Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="scheduleTableBody">
                            <!-- Schedule entries will be inserted here -->
                        </tbody>
                    </table>
                    <!-- Add Schedule Button -->
                    <button type="button" class="btn btn-primary" onclick="addScheduleRow()">Add Schedule</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeScheduleModal()">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveSchedules()">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>

    </script>
}


<script src="/js/_FileExplorer.js"></script>
<script src="/js/_FormatSize.js"></script>
<script src="/js/_Toast.js"></script>
<script src="/js/_Schedule.js"></script>
<script src="/js/RemoteScan.js"></script>

<link rel="stylesheet" href="/css/Drive.css">
<link rel="stylesheet" href="/css/FileExplorer.css">
<link rel="stylesheet" href="/css/Index.css">
