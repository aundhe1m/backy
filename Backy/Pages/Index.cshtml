@page
@model HomeModel
@{
    ViewData["Title"] = "Backy Home";
}

<div class="container">
    <h1 class="display-4 text-center my-5">Welcome to Backy Home</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title">Drive Management</h3>
                    <p class="card-text">Easily manage your drives, partitions, and more with Backy.</p>
                    <a href="/Drives" class="btn btn-primary">Manage Drives</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title">Library</h3>
                    <p class="card-text">Check the drives and partitions added to the Backy Library.</p>
                    <a href="/Library" class="btn btn-success">View Library</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title">Settings</h3>
                    <p class="card-text">Customize Backy settings for optimal performance.</p>
                    <a href="/Settings" class="btn btn-warning">Configure Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>
