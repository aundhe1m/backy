@model Backy.Models.Drive

<div class="card drive-card new-drive-card mb-3" data-drive-serial="@Model.Serial" data-vendor="@Model.Vendor"
    data-model="@Model.Model" data-serial="@Model.Serial"
    data-search-text="@Model.Name @Model.Label @Model.Vendor @Model.Model @Model.Serial">
    <!-- Card Header -->
    <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #f8f9fa;">
        <div class="d-flex align-items-center">
            <!-- Expand/Collapse button -->
            <button class="btn btn-link p-0 me-2 chevron-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#driveDetails-@Model.Serial" aria-expanded="false"
                aria-controls="driveDetails-@Model.Serial">
                <img src="/icons/chevron-down.svg" alt="Expand Details" class="chevron-icon" style="height: 24px;">
            </button>
            <!-- Drive Name -->
            <img src="/icons/device-hdd.svg" alt="Drive Icon" style="height: 24px; margin-right: 8px;" />
            <span>@(string.IsNullOrEmpty(Model.Name) ? "Unnamed Drive" : Model.Name)</span>
        </div>
        <!-- Drive Size -->
        <div>
            <!-- Display drive size -->
            <div>
                <span>@String.Format("{0:F2} GB", Model.Size / 1024.0 / 1024.0 / 1024.0)</span>
            </div>
        </div>
        <!-- Action Buttons -->
        <div class="btn-group">
            <!-- Protect Button -->
            <button type="button" class="btn btn-transparent protect-drive-button" data-drive-serial="@Model.Serial"
                data-bs-toggle="tooltip" title="Protect Drive">
                <img src="/icons/shield-lock.svg" alt="Protect Drive" style="height: 24px;">
            </button>
            <!-- Select Button -->
            <button type="button" class="btn btn-transparent select-drive-button" data-bs-toggle="tooltip"
                title="Select Drive">
                <img src="/icons/plus-square.svg" alt="Select Drive" style="height: 24px;">
            </button>
        </div>
    </div>
    <!-- Collapsible Details -->
    <div class="collapse" id="driveDetails-@Model.Serial">
        <div class="card-body">
            <!-- Drive Details Table -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>State</th>
                            <td>Connected</td>
                        </tr>
                        <tr>
                            <th>Vendor</th>
                            <td>@Model.Vendor</td>
                        </tr>
                        <tr>
                            <th>Model</th>
                            <td>@Model.Model</td>
                        </tr>
                        <tr>
                            <th>Serial</th>
                            <td>@Model.Serial</td>
                        </tr>
                        <tr>
                            <th>Size</th>
                            <td>@String.Format("{0:F2} GB", Model.Size / 1024.0 / 1024.0 / 1024.0)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @foreach (var partition in Model.Partitions)
            {

                <div class="card partition-card mb-2">
                    <!-- Card Header -->
                    <div class="card-header d-flex justify-content-between align-items-center"
                        style="background-color: #01686b36;">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-link p-0 me-2 chevron-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#partitionDetails-@partition.Name" aria-expanded="false"
                                aria-controls="partitionDetails-@partition.Name">
                                <img src="/icons/chevron-down.svg" alt="Expand Details" class="chevron-icon"
                                    style="height: 24px;">
                            </button>
                            <!-- Drive Name -->
                            <img src="/icons/pie-chart.svg" alt="Partition" style="height: 24px; margin-right: 8px;" />
                            <span>@partition.Name</span>
                        </div>
                    </div>
                    <!-- Collapsible Details -->
                    <div class="collapse" id="partitionDetails-@partition.Name">
                        <div class="card-body">
                            <!-- Drive Details Table -->
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tbody>
                                        <tr>
                                            <th>Partition Name</th>
                                            <td>@partition.Name</td>
                                        </tr>
                                        <tr>
                                            <th>Mountpoint</th>
                                            <td>@partition.MountPoint</td>
                                        </tr>
                                        <tr>
                                            <th>Partition UUID</th>
                                            <td>@partition.UUID</td>
                                        </tr>
                                        <tr>
                                            <th>Filesystem</th>
                                            <td>@partition.Fstype</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
