@page
@model Backy.Pages.DriveModel
@{
    ViewData["Title"] = "Drive Catalog";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    @foreach (var drive in Model.Drives)
    {
        var isConnected = drive.IsConnected ? "Connected" : "Disconnected";
        var backgroundColor = drive.IsConnected ? "#198754" : "#555555";
        var usedPercentage = drive.PartitionSize > 0 ? (drive.UsedSpace * 100) / drive.PartitionSize : 0;

        <div class="card mb-3" style="background-color:@backgroundColor; color:white;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@drive.Label</span>
                <span id="used-size-@drive.UUID"></span>/<span id="total-size-@drive.UUID"></span>
                <span>@isConnected</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4"><strong>Vendor:</strong> @drive.Vendor</div>
                    <div class="col-md-4"><i class="fas fa-hdd"></i></div>
                    <div class="col-md-4"><strong>Model:</strong> @drive.Model</div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4"><strong>Serial:</strong> @drive.Serial</div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4"><strong>UUID:</strong> @drive.UUID</div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @usedPercentage%"
                                aria-valuenow="@usedPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="/js/Index.js"></script>

<script>
    // Iterate over the drives to call formatSize for used and total sizes
    @foreach (var drive in Model.Drives)
    {
        <text>
                document.getElementById('used-size-@drive.UUID').textContent = formatSize(@drive.UsedSpace);
                document.getElementById('total-size-@drive.UUID').textContent = formatSize(@drive.PartitionSize);
        </text>
    }

        // Refresh page every 5 minutes (300,000 ms)
        setInterval(() => {
            location.reload();
        }, 300000);
</script>
